<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_huise"
    android:orientation="vertical">

    <include layout="@layout/layout_back" />

    <com.pvj.xlibrary.loadinglayout.LoadingLayout
        android:id="@+id/loadinglayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/button_border_fff"
                android:layout_margin="10dp"


                >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:padding="10dp"
                        android:orientation="horizontal"
                        >

                        <ImageView
                            android:id="@+id/bank_src"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/icon_bank1"
                            />

                <LinearLayout
                    android:id="@+id/bank_contair"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/button_border_fff"
                    android:orientation="vertical"
                    android:layout_gravity="center_vertical"
                    >

                    <TextView
                        android:id="@+id/bankname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="银行"
                        android:textColor="@color/text_font"
                        android:textSize="@dimen/text_size" />
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        >
                    <TextView
                        android:id="@+id/cardtype"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="信用卡"
                        android:textColor="@color/text_font"
                        android:textSize="@dimen/text_size" />

                    </RelativeLayout>

                </LinearLayout>
            </LinearLayout>


                    <TextView
                        android:id="@+id/cardnum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="6666  ****  ****  ****  666"
                        android:textSize="25sp"
                        android:layout_marginLeft="20dp"
                        android:paddingBottom="10dp"

                        />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/ll_nor"
                android:layout_marginTop="10dp"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="提现(元)"
                    android:paddingTop="10dp"
                    android:paddingLeft="10dp"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="￥"
                        android:textColor="@color/text_newbie"
                        android:textSize="@dimen/text_lager_size" />

                    <EditText
                        android:id="@+id/t_moeny"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="10dp"
                        android:background="@null"
                        android:hint="金额不低于100.00元"
                        android:inputType="number"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:textColor="#666"
                        android:textColorHint="#ccc"
                        android:textSize="@dimen/text_15_size" />


                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/xixian"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    ></View>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:padding="10dp"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/show_about"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="了解手续费"
                        android:textColor="@color/text_blue"
                        android:layout_alignParentRight="true"
                        />

                    <TextView

                        android:id="@+id/money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/app_name"

                        android:textColor="@color/font_color1"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentStart="true" />

                </RelativeLayout>



            </LinearLayout>

            <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
                android:layout_marginTop="10dp"
        android:orientation="vertical">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="交易密码"
                android:layout_marginTop="10dp"
                android:textColor="@color/font_color1"
                android:textSize="@dimen/text_size" />


            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:padding="10dp"
                android:background="@null"
                android:hint="请输入您的交易密码"
                android:inputType="textPassword"
                android:maxLines="1"
                android:textSize="@dimen/text_15_size"
                android:textColor="#666"
                android:textColorHint="#ccc"
                android:id="@+id/t_shouyi" />


        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/calculator_go"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_border_selector"
        android:gravity="center"
        android:padding="5dp"
        android:text="确认提现"
        android:textSize="@dimen/text_size"
        android:textColor="#fff" />

        </LinearLayout>
</ScrollView>
    </com.pvj.xlibrary.loadinglayout.LoadingLayout>
</LinearLayout>
