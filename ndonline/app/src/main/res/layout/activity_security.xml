<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_huise"
    android:orientation="vertical">

    <include layout="@layout/layout_back"
        android:id="@+id/ll_title"
        />

    <LinearLayout
        android:id="@+id/ll_midedle"
        android:layout_below="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:background="@drawable/ll_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/go"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="邮箱认证"
            android:textColor="#333"
            android:textSize="@dimen/text_size"
            android:id="@+id/mail_to"
            android:visibility="gone"
            />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:background="@drawable/ll_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/go"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="实名认证"
            android:textColor="#333"
            android:textSize="@dimen/text_size"
            android:id="@+id/certification_to" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:textColor="#333"
            android:background="@drawable/ll_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/go"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="手机认证"
            android:textSize="@dimen/text_size"
            android:id="@+id/phone_to" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:background="@drawable/ll_selector"

            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/go"
            android:gravity="center_vertical"
            android:textColor="#333"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="银行卡认证"
            android:textSize="@dimen/text_size"
            android:id="@+id/bank_to" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_pw"
        android:layout_below="@+id/ll_midedle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:background="@drawable/ll_selector"
            android:drawablePadding="10dp"
            android:textColor="#333"
            android:drawableRight="@mipmap/go"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="修改登录密码"
            android:textSize="@dimen/text_size"
            android:id="@+id/changer_pwd_to" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:textColor="#333"
            android:background="@drawable/ll_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/go"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="修改交易密码"
            android:textSize="@dimen/text_size"
            android:id="@+id/chager_payword_to" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:textColor="#333"
            android:background="@drawable/ll_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/go"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="修改手势密码"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

    <Button
        android:id="@+id/exit"
        android:textColor="#fff"
        android:background="@android:color/holo_red_light"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="退出登录"/>
</RelativeLayout>


