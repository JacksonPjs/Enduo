<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_huise"
    android:orientation="vertical">

    <include layout="@layout/layout_back"
        android:id="@+id/ll_title"
        />

    <LinearLayout
        android:id="@+id/ll_midedle"
        android:layout_below="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:background="@drawable/ll_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/go"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="邮箱认证"
            android:textColor="#333"
            android:textSize="@dimen/text_size"
            android:id="@+id/mail_to"
            android:visibility="gone"
            />



        <RelativeLayout
            android:id="@+id/certification_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:padding="10dp"
            android:background="@drawable/ll_selector"

            >
            <TextView
                android:id="@+id/certification_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="实名认证"
                android:textSize="@dimen/text_size"
                android:textColor="#333"
                android:layout_centerVertical="true"
                />


            <ImageView
                android:id="@+id/certification_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/go"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/certification_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/certification_go"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size"
                android:textColor="#333"
                android:layout_marginRight="5dp"
                />

        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/phone_rl"
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:padding="10dp"
            android:background="@drawable/ll_selector"

            >
            <TextView
                android:id="@+id/phone_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机认证"
                android:textSize="@dimen/text_size"
                android:textColor="#333"
                android:layout_centerVertical="true"
                />
            <ImageView
                android:id="@+id/phone_go"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/go"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/phone_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/phone_go"
                android:layout_centerVertical="true"
                android:textSize="@dimen/text_size"
                android:textColor="#333"
                android:layout_marginRight="5dp"
                />
        </RelativeLayout>
<RelativeLayout
    android:id="@+id/bank_rl"
    android:layout_width="match_parent"
    android:layout_height="@dimen/text_hight"
    android:padding="10dp"
    android:background="@drawable/ll_selector"

    >
    <TextView
        android:id="@+id/bank_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="银行卡认证"
        android:textSize="@dimen/text_size"
        android:textColor="#333"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/bank_go"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/go"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"

        />
    <TextView
        android:id="@+id/bank_tip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/bank_go"
        android:layout_centerVertical="true"
        android:textSize="@dimen/text_size"
        android:textColor="#333"
        android:layout_marginRight="5dp"
        />
</RelativeLayout>


    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_pw"
        android:layout_below="@+id/ll_midedle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:divider="@drawable/divider"
        android:orientation="vertical"
        android:showDividers="middle">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:background="@drawable/ll_selector"
            android:drawablePadding="10dp"
            android:textColor="#333"
            android:drawableRight="@mipmap/go"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="修改登录密码"
            android:textSize="@dimen/text_size"
            android:id="@+id/changer_pwd_to" />

        <TextView

            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:textColor="#333"
            android:background="@drawable/ll_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/go"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="修改交易密码"
            android:textSize="@dimen/text_size"
            android:id="@+id/chager_payword_to" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/text_hight"
            android:textColor="#333"
            android:background="@drawable/ll_selector"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/go"
            android:visibility="gone"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="修改手势密码"
            android:textSize="@dimen/text_size" />

    </LinearLayout>

    <Button
        android:id="@+id/exit"
        android:textColor="#fff"
        android:background="@android:color/holo_red_light"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:text="退出登录"/>
</RelativeLayout>


